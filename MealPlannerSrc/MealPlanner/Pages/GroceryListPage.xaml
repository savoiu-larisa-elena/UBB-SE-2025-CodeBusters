<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MealPlanner.Pages.GroceryListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MealPlanner"
    xmlns:models="using:MealPlanner.Models"
    xmlns:viewmodels="using:MealPlanner.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>

    <Grid Background="#F9E5DA" VerticalAlignment="Stretch">
        <Grid.DataContext>
            <viewmodels:GroceryViewModel/>
        </Grid.DataContext>

        <Button HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,20,20,0"
        Background="Transparent"
        BorderBrush="Transparent">
            <BitmapIcon UriSource="Assets/user_icon.png"
           Width="40"
           Height="40"
           Foreground="#C76E4E"/>
        </Button>

        <Button HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="20"
        Background="Transparent"
        BorderBrush="Transparent"
        Click="NavigateToMealDisplay">
            <BitmapIcon UriSource="Assets/arrow_back.png"
           Width="40"
           Height="40"
           Foreground="#7D8276"/>
        </Button>

        <Grid Margin="80, 100, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Grocery list"
               Foreground="#183D2C"
               FontSize="40"
               FontWeight="Bold"
               Grid.Row="0"
               HorizontalAlignment="Left"/>

            <TextBlock Text="Search ingredient"
               Foreground="#183D2C"
               FontSize="18"
               FontWeight="Bold"
               Grid.Row="1"
               Margin="0,10,0,10"
               HorizontalAlignment="Left"/>

            <Grid Grid.Row="2" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Background="#E3C7B1"
                 CornerRadius="15"
                 BorderBrush="Transparent"
                 Width="280"
                 PlaceholderText="Ingredient:"
                 Text="{x:Bind ViewModel.NewGroceryIngredientName, Mode=TwoWay}"
                 Grid.Column="0"
                 HorizontalAlignment="Left"/>

                <Button Background="#C76E4E"
                Foreground="#F9E5DA"
                CornerRadius="15"
                Padding="20,5"
                Content="Add"
                Command="{x:Bind ViewModel.AddGroceryIngredientCommand}"
                Grid.Column="1"
                Margin="20,0,0,0"
                HorizontalAlignment="Left">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#C76E4E"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="CornerRadius" Value="15"/>
                            <Setter Property="Padding" Value="20,5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Border x:Name="BackgroundElement"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Padding="{TemplateBinding Padding}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>

                                            <ContentPresenter x:Name="ContentPresenter"
                                                  Padding="{TemplateBinding Padding}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>
        </Grid>

        <StackPanel Margin="75, 290, 0, 0"
            HorizontalAlignment="Left">

            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Sections}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout MaximumRowsOrColumns="3"
                               MinColumnSpacing="30"
                               MinRowSpacing="30"
                               Orientation="Horizontal" />
                </ItemsRepeater.Layout>

                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:SectionModel">
                        <Border Width="280"
                        CornerRadius="15"
                        Background="#E3C7B1"
                        Padding="15"
                        Margin="10">

                            <StackPanel>
                                <TextBlock Text="{x:Bind Title}"
                                   Foreground="#183D2C"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0, 0, 0, 10"/>

                                <ListView ItemsSource="{x:Bind Items}" Height="200">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:GroceryIngredient">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <CheckBox IsChecked="{x:Bind IsChecked, Mode=TwoWay}"
                                              Content="{x:Bind Name}"
                                              Foreground="#183D2C"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

        </StackPanel>

        <StackPanel Background="Transparent" 
            HorizontalAlignment="Right" 
            Width="500" 
            Margin="80, 120">

            <Border CornerRadius="25" 
            Background="#E3C7B1" 
            Margin="0,0,0,20">
                <StackPanel Margin="30">
                    <TextBlock Text="Most Frequently Used"
                       Foreground="#183D2C" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,20"/>

                    <ListView ItemsSource="{x:Bind ViewModel.MostFrequentIngredients, Mode=OneWay}" 
                      Height="260">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:GroceryIngredient">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button Background="Transparent"
                                    Click="AddGroceryIngredient_Click"
                                    Padding="5"
                                    Width="30" Height="30"
                                    BorderThickness="0">
                                        <Image Source="Assets/plus.png" Width="20" Height="20"/>
                                    </Button>

                                    <TextBlock Foreground="#183D2C" Text="{x:Bind Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <Border CornerRadius="25" 
            Background="#E3C7B1">
                <StackPanel Margin="30">
                    <TextBlock Text="Most Recently Used"
                       Foreground="#183D2C" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,20"/>

                    <ListView ItemsSource="{x:Bind ViewModel.RecentlyUsedIngredients, Mode=OneWay}" 
                      Height="260">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:GroceryIngredient">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button Background="Transparent"
                                    Click="AddGroceryIngredient_Click"
                                    Padding="5"
                                    Width="30" Height="30"
                                    BorderThickness="0">
                                        <Image Source="Assets/plus.png" Width="20" Height="20"/>
                                    </Button>

                                    <TextBlock Foreground="#183D2C" Text="{x:Bind Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

        </StackPanel>

    </Grid>
</Page>
