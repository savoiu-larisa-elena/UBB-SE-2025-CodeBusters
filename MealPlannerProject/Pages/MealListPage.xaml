<Page
    x:Class="MealPlannerProject.Pages.MealListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:MealPlannerProject.ViewModels"
    x:Name="MealListRoot"
    Background="#FCE8DC">

    <Page.DataContext>
        <vm:MealListViewModel/>
    </Page.DataContext>

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Back Button -->
        <Button HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Background="Transparent"
        BorderBrush="Transparent"
        Command="{Binding BackCommand}">
            <FontIcon Glyph="&#xE72B;" FontSize="30" Foreground="#7D8276"/>
        </Button>


        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Meal list"
                   FontSize="50"
                   FontWeight="Bold"
                   Foreground="#133224"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- Main Content Area with Categories -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Breakfast Section -->
            <StackPanel Grid.Column="0">
                <Button Content="Breakfast"
                        Background="#E67E22"
                        Foreground="White"
                        FontSize="18"
                        Padding="16,8"
                        CornerRadius="20"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                <ScrollViewer Height="480" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding BreakfastMeals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.MealClickCommand, ElementName=MealListRoot}"
                                    CommandParameter="{Binding}">
                                    <StackPanel Margin="0,0,0,20">
                                        <Border CornerRadius="8"
                                            Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">
                                            <Image Source="{Binding ImagePath}"
                                               Width="200"
                                               Height="200"
                                               Stretch="UniformToFill"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                                        FontSize="14"
                                        Foreground="#133224"
                                        TextWrapping="Wrap"
                                        TextAlignment="Center"
                                        Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>
            </StackPanel>

            <!-- Vertical Line 1 -->
            <Rectangle Grid.Column="1"
                       Width="1"
                       Fill="#E0E0E0"
                       Margin="10,0"
                       VerticalAlignment="Stretch"/>

            <!-- Lunch Section -->
            <StackPanel Grid.Column="2">
                <Button Content="Lunch"
                        Background="#D35400"
                        Foreground="White"
                        FontSize="18"
                        Padding="16,8"
                        CornerRadius="20"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                <ScrollViewer Height="480" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding LunchMeals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding DataContext.MealClickCommand, ElementName=MealListRoot}"
                    CommandParameter="{Binding}">
                                    <StackPanel Margin="0,0,0,20">
                                        <Border CornerRadius="8"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                                            <Image Source="{Binding ImagePath}"
                               Width="200"
                               Height="200"
                               Stretch="UniformToFill"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                               FontSize="14"
                               Foreground="#133224"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- Vertical Line 2 -->
            <Rectangle Grid.Column="3"
                       Width="1"
                       Fill="#E0E0E0"
                       Margin="10,0"
                       VerticalAlignment="Stretch"/>

            <!-- Dinner Section -->
            <StackPanel Grid.Column="4">
                <Button Content="Dinner"
                        Background="#27AE60"
                        Foreground="White"
                        FontSize="18"
                        Padding="16,8"
                        CornerRadius="20"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                <ScrollViewer Height="480" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DinnerMeals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding DataContext.MealClickCommand, ElementName=MealListRoot}"
                    CommandParameter="{Binding}">
                                    <StackPanel Margin="0,0,0,20">
                                        <Border CornerRadius="8"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                                            <Image Source="{Binding ImagePath}"
                               Width="200"
                               Height="200"
                               Stretch="UniformToFill"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                               FontSize="14"
                               Foreground="#133224"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- Vertical Line 3 -->
            <Rectangle Grid.Column="5"
                       Width="1"
                       Fill="#E0E0E0"
                       Margin="10,0"
                       VerticalAlignment="Stretch"/>

            <!-- Snack Section -->
            <StackPanel Grid.Column="6">
                <Button Content="Snack"
                        Background="#F39C12"
                        Foreground="White"
                        FontSize="18"
                        Padding="16,8"
                        CornerRadius="20"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                <ScrollViewer Height="480" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SnackMeals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding DataContext.MealClickCommand, ElementName=MealListRoot}"
                    CommandParameter="{Binding}">
                                    <StackPanel Margin="0,0,0,20">
                                        <Border CornerRadius="8"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                                            <Image Source="{Binding ImagePath}"
                               Width="200"
                               Height="200"
                               Stretch="UniformToFill"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                               FontSize="14"
                               Foreground="#133224"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>

        <!-- Recent & Favorite Meals -->
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Top" Margin="40,0,0,0">
            <Border Background="#E8C8B3" Padding="10" CornerRadius="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Recent meals:" FontSize="20" FontWeight="Bold" Foreground="#133224"/>
                    <ListView ItemsSource="{Binding RecentMeals}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="16" Foreground="#133224"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <Border Background="#E8C8B3" Padding="10" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Favorite meals:" FontSize="20" FontWeight="Bold" Foreground="#133224"/>
                    <ListView ItemsSource="{Binding FavoriteMeals}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="16" Foreground="#133224"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>